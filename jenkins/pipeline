pipeline {
  agent any

  environment {
    DOCKER_IMAGE = "rahul0941/Aboutmepage"
  }

  stages {
    stage('Clone Repo') {
      steps {
        git branch: 'main', url: 'https://github.com/rahulkumar-0941/Aboutmepage-deployment-on-k8s.git'
      }
    }

    stage('Docker Login') {
      steps {
        withCredentials([usernamePassword(credentialsId: 'dockerhub-cred-id', usernameVariable: 'DOCKERHUB_USER', passwordVariable: 'DOCKERHUB_PASS')]) {
          sh '''
            echo "$DOCKERHUB_PASS" | docker login -u "$DOCKERHUB_USER" --password-stdin
          '''
        }
      }
    }

    stage('Docker Build') {
      steps {
        sh '''
          docker build -t $DOCKER_IMAGE .
        '''
      }
    }

    stage('Docker Push') {
      steps {
        sh '''
          docker push $DOCKER_IMAGE
        '''
      }
    }
  }

  post {
    success {
      echo '✅ Image successfully built and pushed to DockerHub!'
    }
    failure {
      echo '❌ Something went wrong. Check logs above.'
    }
  }
}
